<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.storage.pgjson.PGJSONRepositoryService" version="1.0.0">

  <require>org.nuxeo.ecm.core.storage.dbs.DBSRepositoryService</require>

  <documentation>
    Manages PostgreSQL+JSON repositories.
  </documentation>

  <implementation class="org.nuxeo.ecm.core.storage.pgjson.PGJSONRepositoryService" />

  <service>
    <provide interface="org.nuxeo.ecm.core.storage.pgjson.PGJSONRepositoryService" />
  </service>

  <extension-point name="repository">
    <documentation>
      Extension points to register PostgreSQL+JSON repositories.
      The repository will lookup a datasource named 'jdbc/repository_[repositoryName]'.
    </documentation>
    <object class="org.nuxeo.ecm.core.storage.pgjson.PGJSONRepositoryDescriptor" />
  </extension-point>

</component>
